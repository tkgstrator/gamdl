{
  "name": "Gamdl",
  "dockerComposeFile": "compose.yaml",
  "service": "app",
  "workspaceFolder": "/home/vscode/app",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10.19"
    },
    "ghcr.io/devcontainers-extra/features/uv:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/ffmpeg-apt-get:1": {}
  },
  "postAttachCommand": "/bin/zsh .devcontainer/postAttachCommand.sh",
  "postCreateCommand": "/bin/zsh .devcontainer/postCreateCommand.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "PKief.material-icon-theme",
        "antfu.file-nesting",
        "charliermarsh.ruff",
        "dbaeumer.vscode-eslint",
        "editorconfig.editorconfig",
        "esbenp.prettier-vscode",
        "ms-python.black-formatter",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "openai.chatgpt",
        "tamasfe.even-better-toml",
        "vsls-contrib.gitdoc"
      ],
      "settings": {
        "files.watcherExclude": {
          "**/.venv/**": true
        },
        "debug.internalConsoleOptions": "openOnFirstSessionStart",
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "python.formatting.provider": "black",
        "python.languageServer": "Pylance",
        "python.linting.flake8Args": [
          "--max-line-length 119"
        ],
        "python.linting.flake8Enabled": true,
        "python.linting.mypyEnabled": true,
        "pylance.insidersChannel": "daily",
        "python.analysis.completeFunctionParens": true,
        "python.analysis.logLevel": "Warning",
        "python.analysis.memory.keepLibraryAst": true,
        "python.autoComplete.addBrackets": true,
        "python.diagnostics.sourceMapsEnabled": true,
        "python.insidersChannel": "daily",
        "python.linting.banditEnabled": true,
        "python.terminal.activateEnvInCurrentTerminal": true,
        "python.testing.pytestEnabled": true,
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter",
          "editor.formatOnSave": true
        }
      }
    }
  }
}